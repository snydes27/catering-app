<!DOCTYPE html>
<html class="no-js" lang="en">
<%= render "layouts/header" %>

<body>
  <div class="top-bar">
    <div class="row">
      <div class="top-bar-left">
        <ul class="dropdown menu" data-dropdown-menu>
          <li class="menu-text">700 South Deli and Catering</li>
          <li class="has-submenu">
            <a href="#">Breakfast Menu</a>
            <ul class="submenu menu vertical" data-submenu>
              <li><a href="#">Hot Breakfast</a></li>
              <li><a href="#">Continental Breakfast</a></li>
              <li><a href="#">Ala Carte Breakfast</a></li>
            </ul>
          </li>
          <li><a href="#">Lunch Menu</a></li>
          <li><a href="#">Beverages</a></li>
        </ul>
      </div>
      <div class="top-bar-right">
        <ul class="menu">
          <%= render 'devise/menu/registration_items' %>
          <%= render 'devise/menu/login_items' %>
        </ul>
      </div>
    </div>
  </div>

  <br>

  <div class="row columns">
    <nav aria-label="You are here:" role="navigation">
      <ul class="breadcrumbs">
        <li><a href="#">Home</a></li>
        <li><a href="#">Features</a></li>
        <li class="disabled">Catering Menu</li>
        <li>
          <span class="show-for-sr">Current: </span> Menu Items
        </li>
      </ul>
    </nav>
  </div>
  <div class="row columns">
    <div class="small-8 columns">
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
      <%= yield %>
    </div>
    <div class="medium-4 columns">
      <% if @cart %>
        <%= hidden_div_if(@cart.line_items.empty?, id: 'cart') do %>
          <%= render @cart %>
        <% end %>
      <% end %>
    </div>
  </div>
</body>
</html>